{
  "name": "shopaa",
  "version": "1.0.0",
  "description": "",
  "main": "backend/app.ts",
  "type": "module",
  "scripts": {
    "genkey": "tsx ./backend/scripts/generateKeyPair.ts",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && preview",
    "client": "cd frontend && npm run dev",
    "start": "tsx ./backend/app.ts NODE_ENV=production",
    "server": "tsx watch ./backend/app.ts NODE_ENV=development",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "seed": "tsx ./backend/prisma/seed.ts",
    "prisma:generate": "prisma generate --sql",
    "prisma:migrate:dev": "prisma migrate dev --name init && npm run seed",
    "prisma:migrate:prod": "prisma migrate deploy && npm run seed",
    "prisma:studio": "prisma studio",
    "api": "tsx ./backend/routes/docs/apiServer.ts",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "prisma": {
    "schema": "backend/prisma/schema"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@types/passport-facebook": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "path-to-regexp": "^8.2.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.8",
    "@types/nodemailer": "^6.4.16",
