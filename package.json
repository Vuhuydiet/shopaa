    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^9.0.1",
    "globals": "^15.9.0",
    "helmet": "^8.0.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.15",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tabtab": "^3.0.2",
