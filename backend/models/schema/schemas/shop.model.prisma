model Shop {
  shopOwnerId     Int     @id
  shopName        String
  shopDescription String?
  address         String?

  numProducts    Int @default(0)
  bankingBalance Int @default(0)
  numSoldOrders  Int @default(0)

  shopOwner UserProfile @relation(fields: [shopOwnerId], references: [userId], onDelete: Restrict)
  orders    Order[]
  products  Product[]
  reports   Report[]
}
