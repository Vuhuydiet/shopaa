model Report {
    reportId    Int      @id @default(autoincrement())
    reporterId  Int
    createdAt   DateTime @default(now())
    description String?
    type        String
    shopCategory    String? 
    productCategory String? 
    shopId      Int?     
    productId   Int?     

    reporter      UserProfile @relation(fields: [reporterId], references: [userId])
    reportedShop    Shop?       @relation(fields: [shopId], references: [shopOwnerId]) 
    reportedProduct Product?    @relation(fields: [productId], references: [productId]) 
    reportResult  ReportResult?

    shopCategoryReport ShopCategoryReport? @relation(fields: [shopCategory], references: [categoryName], onDelete: Restrict, map: "fk_shop_category") 
    productCategoryReport ProductCategoryReport? @relation(fields: [productCategory], references: [categoryName], onDelete: Restrict, map: "fk_product_category") 
}
